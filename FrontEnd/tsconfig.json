{
    "extends": "@tsconfig/react-native/tsconfig.json",
    "compilerOptions": {
      "esModuleInterop": true,

      "moduleResolution": "node",
      "allowSyntheticDefaultImports": true,
      "module": "commonjs",
      "jsx": "react-native",
      "baseUrl": ".",
      "paths": {
        "*": ["src/*"],
        "tests": ["tests/*"],
        "@components/*": ["src/components/*"],
      },
    },
    "exclude": [
      "node_modules",
      "babel.config.js",
      "metro.config.js",
      "jest.config.js"
    ],
  }